@model DMS.DTO.DeviceViewModel
@for(int i = 0; i < Model.AvailableProperties.Count; i++)
{
    <div class="form-group mb-2">
        <label asp-for="Memo" class="control-label">@Model.AvailableProperties[i].PropertyDescription</label>
        <input type="hidden" asp-for="PropertyItemsID[i]" value="@Model.AvailableProperties[i].ID" class="form-control" />
        <input asp-for="PropertyValues[i]" class="form-control" />
    </div>
}
